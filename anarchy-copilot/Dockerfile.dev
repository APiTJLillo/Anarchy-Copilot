# Development environment Dockerfile
FROM python:3.10-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    wget \
    unzip \
    git \
    make \
    gcc \
    vim \
    curl \
    iputils-ping \
    net-tools \
    && rm -rf /var/lib/apt/lists/*

# Install Nuclei
RUN wget https://github.com/projectdiscovery/nuclei/releases/download/v2.9.0/nuclei_2.9.0_linux_amd64.zip \
    && unzip nuclei_2.9.0_linux_amd64.zip \
    && mv nuclei /usr/local/bin/ \
    && rm nuclei_2.9.0_linux_amd64.zip \
    && nuclei -update-templates

WORKDIR /app

# Install Python development tools
RUN pip install --no-cache-dir \
    ipython \
    ipdb \
    debugpy \
    pip-tools \
    watchdog \
    uvicorn[standard]

# Install Python dependencies
COPY requirements*.txt ./
COPY tests/requirements-test.txt ./tests/
RUN pip install --no-cache-dir -r requirements.txt \
    && pip install --no-cache-dir -r tests/requirements-test.txt

# Copy source code
COPY . .

# Install package in development mode
RUN pip install -e .[dev]

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV NUCLEI_TEMPLATES=/root/.nuclei/templates
ENV DEBUG=1

# API and Debugger ports
EXPOSE 8000
EXPOSE 5678

# Create development directories
RUN mkdir -p /app/logs /app/data

# Add development utilities
COPY scripts/dev-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/dev-entrypoint.sh

# Default command with debugger support
CMD ["python", "-m", "debugpy", "--listen", "0.0.0.0:5678", \
     "-m", "uvicorn", "anarchy_copilot.api:app", \
     "--host", "0.0.0.0", "--port", "8000", "--reload"]

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1
